{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Contacts App",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation to the Contacts app"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8080"
    },
    {
      "url": "https://contacts-1fxm.onrender.com"
    }
  ],
  "tags": [
    {
      "name": "Contacts",
      "description": "Operations with contacts."
    },
    {
      "name": "Auth",
      "description": "Auth operations."
    }
  ],
  "paths": {
    "/contacts/{id}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Get contact by id",
        "operationId": "getContact",
        "description": "Get contact by id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "507f191e810c19729de860ea"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully find contact by id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found contact with id: 507f191e810c19729de860ea!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/contact"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "description": "Contact not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "description": "Status code",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "description": "Error message",
                      "example": "Contact not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "contact": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "phoneNumber",
          "contactType",
          "userId",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Contact id",
            "example": "507f191e810c19729de860ea"
          },
          "name": {
            "type": "string",
            "description": "Contact name",
            "example": "Albert Einstein"
          },
          "email": {
            "type": "string",
            "description": "Contact email",
            "example": "example@mail.com"
          },
          "isFavourite": {
            "type": "boolean",
            "description": "Is contact favourite",
            "default": false
          },
          "phoneNumber": {
            "type": "string",
            "description": "Contact phone number",
            "example": "+380000000000"
          },
          "contactType": {
            "type": "string",
            "description": "Contact type",
            "enum": [
              "work",
              "home",
              "personal"
            ]
          },
          "userId": {
            "type": "string",
            "description": "Contact's user id",
            "example": "6592008029c8c3e4dc76256c"
          },
          "photo": {
            "type": "string",
            "description": "Link to contact's photo",
            "example": "https://res.cloudinary.com/dod6fxmir/image/upload/img.jpg"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-07-30T17:51:59.589+00:00"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "22025-07-30T18:36:34.246+00:00"
          }
        }
      }
    },
    "responses": {
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "required": [
                "status",
                "message"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "description": "Status code",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "description": "Error message",
                  "example": "Unauthorized error"
                }
              }
            }
          }
        }
      },
      "500": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "required": [
                "status",
                "message"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "description": "Status code",
                  "example": 500
                },
                "message": {
                  "type": "string",
                  "description": "Error message",
                  "example": "Internal server error"
                }
              }
            }
          }
        }
      }
    }
  }
}